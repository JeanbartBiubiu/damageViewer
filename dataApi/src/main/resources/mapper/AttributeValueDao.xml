<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.game.dao.AttributeValueDao">

    <resultMap type="xyz.game.entity.AttributeValue" id="AttributeValueMap">
        <result property="indivId" column="indiv_id" jdbcType="INTEGER"/>
        <result property="attributeId" column="attribute_id" jdbcType="INTEGER"/>
        <result property="levelId" column="level_id" jdbcType="INTEGER"/>
        <result property="value" column="value" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AttributeValueMap">
        select
indiv_idattribute_idlevel_idvalue
        from ${whichGame}.attribute_value
        where  = #{}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AttributeValueMap">
        select
indiv_idattribute_idlevel_idvalue
        from ${whichGame}.attribute_value
        <where>
            <if test="indivId != null">
                and indiv_id = #{indivId}
            </if>
            <if test="attributeId != null">
                and attribute_id = #{attributeId}
            </if>
            <if test="levelId != null">
                and level_id = #{levelId}
            </if>
            <if test="value != null">
                and value = #{value}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from ${whichGame}.attribute_value
        <where>
            <if test="indivId != null">
                and indiv_id = #{indivId}
            </if>
            <if test="attributeId != null">
                and attribute_id = #{attributeId}
            </if>
            <if test="levelId != null">
                and level_id = #{levelId}
            </if>
            <if test="value != null">
                and value = #{value}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into ${whichGame}.attribute_value(indiv_idattribute_idlevel_idvalue)
        values (#{indivId}#{attributeId}#{levelId}#{value})
    </insert>

    <insert id="insertBatch" keyProperty="" useGeneratedKeys="true">
        insert into ${whichGame}.attribute_value(indiv_idattribute_idlevel_idvalue)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.indivId}#{entity.attributeId}#{entity.levelId}#{entity.value})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="" useGeneratedKeys="true">
        insert into ${whichGame}.attribute_value(indiv_idattribute_idlevel_idvalue)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.indivId}#{entity.attributeId}#{entity.levelId}#{entity.value})
        </foreach>
        on duplicate key update
indiv_id = values(indiv_id)attribute_id = values(attribute_id)level_id = values(level_id)value = values(value)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ${whichGame}.attribute_value
        <set>
            <if test="indivId != null">
                indiv_id = #{indivId},
            </if>
            <if test="attributeId != null">
                attribute_id = #{attributeId},
            </if>
            <if test="levelId != null">
                level_id = #{levelId},
            </if>
            <if test="value != null">
                value = #{value},
            </if>
        </set>
        where  = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ${whichGame}.attribute_value where  = #{}
    </delete>

</mapper>

